<% include partials/header %>
	<div class="ui main text container segment">
		<h1>Edit <%=blog.title%></h1>
		<form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST"> <!-- HTML forms only support GET and POST. So, PUT will be treated as GET. -->
			<div class="field">
				<label>Title</label>
				<input type="text" name="blog[title]" value="<%=blog.title%>" required>
			</div>
			<div class="field">
				<label>Image</label>
				<input type="text" name="blog[image]" value="<%=blog.image%>">
			</div>
			<div class="field">
				<label>Blog content</label>
				<textarea name="blog[body]" required><%=blog.body%></textarea>
			</div>
			<input class="ui violet big basic button" type="submit">
		</form>
	</div>
<% include partials/footer %>
